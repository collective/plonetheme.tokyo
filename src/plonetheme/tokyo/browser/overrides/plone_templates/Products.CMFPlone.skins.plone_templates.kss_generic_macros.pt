<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="plone">

<body>

  <metal:title_view define-macro="generic_title_view">
    <tal:archetypes condition="exists:context/getField">
      <h1 class="documentFirstHeading" metal:define-macro="title-field-view">
        <span metal:define-slot="inside" tal:replace="context/Title">title</span>
      </h1>
    </tal:archetypes>
    <h1 tal:content="context/Title" class="documentFirstHeading" tal:condition="not:exists:context/getField">Title or ID</h1>
  </metal:title_view>

  <metal:description_view define-macro="generic_description_view">
    <tal:archetypes condition="exists:context/getField">
      <div class="documentDescription" metal:define-macro="description-field-view" tal:condition="context/Description">
        <span metal:define-slot="inside" tal:replace="context/Description">Description</span>
      </div>
    </tal:archetypes>
    <div class="documentDescription"
         tal:content="context/Description"
         tal:define="have_at exists:context/getField"
         tal:condition="python:context.Description() and not have_at">
      Description
    </div>
  </metal:description_view>

</body>

</html>
