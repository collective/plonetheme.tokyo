<tal:header xmlns="http://www.w3.org/1999/xhtml"
            xmlns:tal="http://xml.zope.org/namespaces/tal">

  <header id="menu-header" class="active" tal:define="navroot context/@@plone_portal_state/navigation_root_url">
    <div class="container-fluid header-wrapper">

      <a class="header-logo" href="${navroot}">
        <img src="${python: view.logo if view.logo else navroot+'/++plone++plonetheme.tokyo/plone_logow.svg'}"
             alt="${view/logo_title}"
             title="${view/logo_title}">
      </a>
      <div class="header-icons">
        <i id="portaltab-burger-menu" class="glyphicon glyphicon-menu-hamburger"></i>
      </div>

    </div>
  </header>

</tal:header>
