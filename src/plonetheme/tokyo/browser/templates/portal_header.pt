<div id="portal-header" tal:define="navroot context/@@plone_portal_state/navigation_root_url; logo_url view/logo_url; logo_title view/logo_title">

  <nav class="navbar fixed-top navbar-dark bg-primary">

    <div class="container">

      <a class="navbar-brand" href="${navroot}">
        <img src="${logo_url}" alt="${logo_title}" title="${logo_title}">
      </a>

      <div id="burger-menu" class="navbar-menu ml-auto text-white">
        <i id="portaltab-burger-menu" class="glyphicon glyphicon-menu-hamburger m-0"></i>
      </div>

    </div>

  </nav>

</div>