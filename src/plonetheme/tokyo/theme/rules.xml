<?xml version="1.0" encoding="UTF-8"?>
<rules xmlns="http://namespaces.plone.org/diazo"
       xmlns:css="http://namespaces.plone.org/diazo/css"
       xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
       xmlns:xi="http://www.w3.org/2001/XInclude">

  <theme href="index.html" />

  <rules css:if-content="#portal-top">

    <!-- Header Rules -->
    <replace css:theme-children="aside" method="raw">
      <xsl:choose>

        <xsl:when test="not(//body[contains(@class, 'template-insufficient_privileges')])">
          <xsl:variable name="headerattr">content-below</xsl:variable>
          <div class="{$headerattr}">
            <xsl:apply-templates css:select="#menu-header" />
            <xsl:apply-templates css:select="#portal-navigation" />
            <xsl:apply-templates css:select="#portal-cookiebar" />
          </div>
        </xsl:when>

        <xsl:otherwise>
          <xsl:variable name="headerattr">content-uncontained</xsl:variable>
          <div class="{$headerattr}">
            <xsl:apply-templates css:select="#menu-header" />
            <xsl:apply-templates css:select="#portal-navigation" />
            <xsl:apply-templates css:select="#portal-cookiebar" />
          </div>
        </xsl:otherwise>

      </xsl:choose>
    </replace>

    <!-- Attributes -->
    <copy attributes="*"
          css:theme="html"
          css:content="html" />

    <!-- Base -->
    <before css:theme="title"
            css:content="base" />

    <!-- Title -->
    <replace css:theme="title"
             css:content="title" />

    <!-- Metadata -->
    <after css:theme-children="head"
           css:content="head meta" />

    <!-- Icons -->
    <drop css:content="head link[rel='apple-touch-icon']" />
    <drop css:content="head link[rel='shortcut icon']" />

    <!-- CSS -->
    <after css:theme-children="head"
           css:content="head link" />

    <after css:theme-children="head"
           css:content="head style" />

    <!-- Script -->
    <after css:theme-children="head"
           css:content="head script" />

  </rules>

  <!-- Above Content -->
  <replace css:content="#viewlet-above-content"
           css:theme="#above-content" />

  <!-- Central -->
  <replace css:theme="#content-container" method="raw">
    <xsl:choose>

      <xsl:when test="not(//body[contains(@class, 'template-insufficient_privileges')])">

        <!-- Portlet Support - Use {$central}
        <xsl:variable name="central">
          <xsl:if test="//aside[@id='portal-column-one'] and //aside[@id='portal-column-two']">col-xs-12 col-sm-6</xsl:if>
          <xsl:if test="//aside[@id='portal-column-two'] and not(//aside[@id='portal-column-one'])">col-xs-12 col-sm-9</xsl:if>
          <xsl:if test="//aside[@id='portal-column-one'] and not(//aside[@id='portal-column-two'])">col-xs-12 col-sm-9</xsl:if>
          <xsl:if test="not(//aside[@id='portal-column-one']) and not(//aside[@id='portal-column-two'])">col-xs-12 col-sm-12</xsl:if>
        </xsl:variable> -->

        <div class="container content-contained">
          <div class="col-xs-12 col-sm-12">
            <div class="row">
              <div class="inner-wrapper">
                <xsl:apply-templates css:select="#global_statusmessage" />
                <xsl:apply-templates css:select="#content" />
              </div>
            </div>
          </div>
        </div>

      </xsl:when>

      <xsl:otherwise>
        <xsl:variable name="central">content-uncontained</xsl:variable>
        <div class="{$central}">
          <div class="inner-wrapper">
            <xsl:apply-templates css:select="#global_statusmessage" />
            <xsl:apply-templates css:select="#content" />
          </div>
        </div>
      </xsl:otherwise>

    </xsl:choose>
  </replace>

  <drop css:content="#global_statusmessage"
        css:if-not-content="#global_statusmessage .portalMessage" />

  <!-- Footer -->
  <replace css:theme-children="#portal-footer"
           css:content-children="#portal-footer-wrapper" />

  <!-- Anonymous -->
  <rules css:if-content="body.userrole-anonymous">

    <!-- Toolbar -->
    <drop css:theme="#portal-toolbar" />

    <!-- Classes -->
    <copy attributes="class"
          css:content="body"
          css:theme="body" />

  </rules>

  <!-- Authenticated -->
  <rules css:if-content="body.userrole-authenticated">

    <!-- Toolbar -->
    <drop css:theme="#portal-toolbar" />

    <!-- Classes -->
    <copy attributes="*"
          css:content="body"
          css:theme="body" />

  </rules>

</rules>
